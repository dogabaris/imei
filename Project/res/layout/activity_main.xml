<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#131A21"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tel_rehber.MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="ÖDEMELİ ARAMA"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FDD631"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="normal" />

    <Button
        android:id="@+id/ara"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/button1"
        android:layout_centerVertical="true"
        android:background="@drawable/btn"
        android:enabled="false"
        android:text="Ödemeli At" />

    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/ara"
        android:layout_alignLeft="@+id/numara"
        android:layout_marginBottom="25dp"
        android:background="@drawable/btn"
        android:text="Rehberden Seç" />

    <TextView
        android:id="@+id/numara"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignLeft="@+id/ad"
        android:layout_marginBottom="23dp"
        android:gravity="center"
        android:text="Kişiyi seçin"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/ad"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/numara"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Rehberinizden"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#51D2B7"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>